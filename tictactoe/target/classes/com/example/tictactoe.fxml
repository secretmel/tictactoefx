<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.TicTacToeController">
    <top>
        <Label fx:id="statusLabel" text="Player X's turn" style="-fx-font-size: 16px;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <GridPane fx:id="gridPane" gridLinesVisible="true" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
